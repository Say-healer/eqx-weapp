<view class="eqx-class eqx-page">
    <view class="eqx-page-prev" wx:if="{{ mode === 'button' }}">
        <eqx-button eqx-class="eqx-page-button" type="ghost" bindclick="handlePrev" disabled="{{ current === 1 }}"><slot name="prev"></slot></eqx-button>
    </view>
    <view class="eqx-page-number" wx:if="{{ mode !== 'pointer' && !simple }}">
        <view class="eqx-page-number-current">{{ current }}</view>/{{total}}
    </view>
    <view class="eqx-page-pointer" wx:if="{{ mode === 'pointer' }}">
        <view class="eqx-page-pointer-dot {{ (index + 1) === current ? 'current' : '' }}" wx:for="{{ total }}" wx:key="index"></view>
    </view>
    <view class="eqx-page-next" wx:if="{{ mode === 'button' }}">
        <eqx-button eqx-class="eqx-page-button" type="ghost" bindclick="handleNext" disabled="{{ current === total }}"><slot name="next"></slot></eqx-button>
    </view>
</view>
